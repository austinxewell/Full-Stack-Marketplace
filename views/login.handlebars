    <!-- Body/Login -->
    <!-- sign in form -->
    <form id="login-form" class="pl-5 p-2 has-background-light">
        <textarea id="email-login" class="textAreaLogin" cols="30" rows="1" placeholder="Email:">{{email}}</textarea>
        <br>
        <textarea id="password-login" class="textAreaLogin passwordProtection" cols="30" rows="1" placeholder="Password:">{{password}}</textarea>
        <div class="buttons">
            <button id="login-btn" class="button is-info">
            Login
            </button>
        </div>
    </form>
    <!-- sign up form -->
    <form id="signup-form" class="pl-5 p-2 has-background-light">
        <textarea id="username-signup" class="textAreaLogin" cols="30" rows="1" placeholder="Username:">{{username}}</textarea>
        <br>
        <textarea id="email-signup" class="textAreaLogin" cols="30" rows="1" placeholder="Email:">{{email}}</textarea>
        <br>
        <textarea id="password-signup" class="textAreaLogin passwordProtection" cols="30" rows="1" placeholder="Password:">{{password}}</textarea>
        <div class="buttons">
            <button id="signup-btn" class="button is-info">
            Sign Up
            </button>
        </div>
    </form>

