<section>
   {{!-- Create New Listing Header --}}
   <h2 class="is-size-2 is-underlined has-text-white ml-3">Create New Listing</h2>
   <br>
   <form class='new-post-form' name="new-post-form" id="new-post-form" enctype="multipart/form-data">
      <!-- Add Img section -->
      <div class='column is-full border mb-2 has-background-light'>
         <div class='columns'>
            <div class='column is-2 borderRight'>
               <input type='file' id='item_img' name='item_img' class="fileBottom" />
            </div>
            {{!-- Title, Price, Shipping info for new listing --}}
            <div class='column is-2 borderRight'>
               <textarea
                  id='post-title'
                  class='textAreaInfo'
                  name='item_title'
                  placeholder=' Title of Item:'
               >{{title}}</textarea>
               <textarea
                  id='post-price'
                  class='textAreaInfo'
                  name='item_price'
                  placeholder=' Price of Item:'
               >{{price}}</textarea>
               <br>
               <label>Shipping: </label>
                    <select id="post-shipping" class="dropdown" name="item_shipping"> Shipping: 
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
            </div>
            <!-- Text area for description -->
            <textarea
               id="post-description"
               class='column is-6 borderRight'
               name='item_description'
               placeholder=' Description of Item:'
            >{{desciption}}</textarea>
            {{! submit button }}
            <div class='column is-2'>
               <button id='new-mylisting' class='button is-info buttonSize'>
                  <span><strong>Submit </strong><i class="fas fa-plus-square"></i></span>
               </button>
            </div>
         </div>
      </div>
   </form>
</section>

